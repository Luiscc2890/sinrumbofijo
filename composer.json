{
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        {
            "type": "vcs",
            "url": "https://github.com/artberri/hamcrest-php"
        }
    ],
    "require": {
        "php": ">=5.4",
        "johnpbloch/wordpress": "4.5.*",
        "wpackagist-plugin/regenerate-thumbnails": "2.2.*",
        "wpackagist-plugin/wpsocialite": "2.4.*",
        "wpackagist-plugin/simple-facebook-twitter-widget": "1.4.*",
        "wpackagist-plugin/wordpress-seo": "3.2.*",
        "wpackagist-plugin/gator-cache": "2.0.*",
        "wpackagist-plugin/default-featured-image": "1.6.*",
        "wpackagist-plugin/contact-form-to-email": "^1.1",
        "wpackagist-plugin/autoptimize": "2.0.*",
        "wpackagist-theme/harmonux-core": "1.3.*"
    },
    "require-dev": {
        "composer/installers": "1.*",
        "deployer/deployer": "^3.2",
        "deployphp/recipes": "^3.1",
        "squizlabs/php_codesniffer": "^2.6",
        "wp-coding-standards/wpcs": "dev-master",
        "phpunit/phpunit": "^4.8",
        "10up/wp_mock": "dev-master",
        "hamcrest/hamcrest-php": "dev-master#bfe9d545ff1d9e30f7443257cc5d1fcfbf492bff",
        "behat/behat": "~3.0.6",
        "behat/mink-extension": "^2.2",
        "behat/mink-goutte-driver": "^1.2",
        "behat/mink-selenium2-driver": "^1.3"
    },
    "extra": {
        "wordpress-install-dir": "src/wp",
        "installer-paths": {
            "src/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "src/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "src/wp-content/themes/{$name}/": ["type:wordpress-theme"]
        }
    }
}
